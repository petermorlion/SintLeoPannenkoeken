@using Microsoft.AspNetCore.Identity
@using SintLeoPannenkoeken.Blazor.Data

@inject SignInManager<ApplicationUser> SignInManager


<MudGrid>
    <MudItem>
        <MudNavLink class="nav-link" href="Account/Manage" Match="NavLinkMatch.All">Profiel</MudNavLink>
    </MudItem>
    <MudItem>
        <MudNavLink class="nav-link" href="Account/Manage/ChangePassword">Wachtwoord</MudNavLink>
    </MudItem>
</MudGrid>
@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
