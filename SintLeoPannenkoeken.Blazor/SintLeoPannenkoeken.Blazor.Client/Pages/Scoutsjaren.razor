@page "/scoutsjaren"
@using SintLeoPannenkoeken.Blazor.Client.Server
@using SintLeoPannenkoeken.Blazor.Client.Server.Contracts

@inject ServerHttpClient httpClient

<PageTitle>Scoutsjaren</PageTitle>

<h1>Scoutsjaren</h1>

<MudDataGrid T="ScoutsjaarDto" 
             Items="@_scoutsjaren" 
             SortMode="SortMode.Multiple" 
             Filterable="true"
             MultiSelection"false">
    <Columns>
        <SelectColumn T="ScoutsjaarDto" />
        <PropertyColumn Property="x => x.Begin" Title="Jaar" />
        <PropertyColumn Property="x => x.PannenkoekenPerPak" Title="Pannenkoeken per pak" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="ScoutsjaarDto" />
    </PagerContent>
</MudDataGrid>

@code {
    private IEnumerable<ScoutsjaarDto> _scoutsjaren = new List<ScoutsjaarDto>();
    private string _searchString;

    protected override async Task OnInitializedAsync()
    {
        _scoutsjaren = await httpClient.GetScoutsjaren();
    }

    private class WeatherForecast
    {
        public DateOnly Date { get; set; }
        public int TemperatureC { get; set; }
        public string? Summary { get; set; }
        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}
