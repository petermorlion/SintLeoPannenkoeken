@using SintLeoPannenkoeken.Blazor.Client.Auth

<MudPaper Width="250px" Class="py-3" Elevation="0">
    <MudNavMenu>
        <MudText Typo="Typo.h6" Class="px-4">
            <img src="zeescouts.svg" alt="Zeescouts Logo" style="height: 32px; width: auto; vertical-align: middle; margin-right: 8px;" />
            Pannenkoeken
        </MudText>
        <MudDivider Class="my-2" />
        <MudNavLink Href="/bestellingen">Bestellingen</MudNavLink>
        <MudNavGroup Title="Rapporten">
            <MudNavLink Href="/rapporten/verkooppertak">Verkoop per tak</MudNavLink>
            <MudNavLink Href="/rapporten/verkoopperlid">Verkoop per lid</MudNavLink>
            <MudNavLink Href="/rapporten/ingavetotalen">Totaal ingegeven</MudNavLink>
        </MudNavGroup>
        <AuthorizeView Roles="@($"{Roles.Admin},{Roles.FinanciePloeg}")">
            <Authorized>
                <MudNavGroup Title="Beheer">
                    <MudNavLink Href="/beheer/leden">Leden</MudNavLink>
                    <MudNavLink Href="/beheer/scoutsjaren">Scoutsjaren</MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>
    </MudNavMenu>
</MudPaper>
