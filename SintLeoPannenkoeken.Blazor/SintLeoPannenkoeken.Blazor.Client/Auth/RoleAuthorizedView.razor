<AuthorizeView Roles="@Roles">
    <Authorized>
        @ChildContent
    </Authorized>
    <NotAuthorized>
        <MudText Typo="Typo.body1">
            U heeft geen toegang tot deze pagina.
        </MudText>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Roles { get; set; } = string.Empty;
}
