@section Scripts {
    <script>
        async function reloadStraten() {
            var response = await fetch(`/api/straten`);
            if (!response.ok) {
                // TODO: handle error
            }

            var json = await response.json();
            $('#stratenTable').DataTable({
                destroy: true,
                data: json,
                pageLength: 100,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.1/i18n/nl-NL.json'
                },
                columns: [
                    { data: 'nummer' },
                    { data: 'zone' },
                    { data: 'naam' },
                    { data: 'postNummer' },
                    { data: 'gemeente' },
                    { data: 'omschrijving' }
                ]
            });
        }

        async function submitLid() {
            var data = {
                achternaam: $('#lidForm #achternaam').val(),
                voornaam: $('#lidForm #voornaam').val(),
                functie: $('#lidForm #functie').val(),
                takId: $('#lidForm #tak').val()
            };

            var response = await fetch(`/api/leden`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            if (!response.ok) {
                // TODO: handle error
            }

            setFocus();
        }

        function setFocus() {
            $('#lidForm #achternaam').focus();
        }

        function clearForm() {
            $('#lidForm')[0].reset();
        }

        $(async function () {
            $('#lidForm button.btn-primary').click(async function(event) {
                event.preventDefault();
                await submitLid();
                await reloadLeden();
                clearForm();
            });

            await reloadStraten();
            setFocus();
        });
    </script>
}
